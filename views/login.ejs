<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Compiled and minified CSS of Materialize CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <title>EcoBank - Login</title>
</head>
<body>
    <!-- FOR LARGER SCREENS -->
    <nav class="green darken-2 sidenav-trigger show-on-med-and-up hide-on-small-and-down" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="/" class="brand-logo">EcoBank</a>
            <ul class="right hide-on-small-and-down">
            <li><a href="/accounts/register">Register</a></li>
            </ul>
        </div>
    </nav>
    <!-- FOR SMALLER SCREENS -->
    <nav class="green darken-2 sidenav-trigger show-on-med-and-down hide-on-med-and-up" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="/" class="brand-logo left">EcoBank</a>
            <ul class="right">
            <li><a href="/accounts/register">Register</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="container">
            <div class="row">
                <H3 class="center">Please Log In to Your Eco-Bank Account</H3>
                <% if ( typeof messages.err != "undefined" ) {%>
                    <h5 class="center red-text"><%= messages.err %></h5>
                <% } %>
            </div>

            <form action="/accounts/login" method="POST">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="email" name="email" required>
                        <label>Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="password" name="password" required>
                        <label>Password</label>
                    </div>
                </div>
                <div class="row">
                    <button class="btn btn-large waves-effect waves-light green" type="submit">
                    Submit
                    </button>
                </div>
            </form>
        </div>
    </div>

<%- include('../partials/bottomIndex.ejs') %>
